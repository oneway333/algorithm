/*
 *
3.15 验证回文串
给你一个字符串s，最多可以从中删除一个字符。请你判断s是否能成为回文字符串。
输入：s = "abca"
输出：1
输入：s = "abc"
输出：0

 */

#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <math.h>

#define N 50
#define M 50

int verify(char s[], int n){
    // 左右指针，向中间靠拢
    int i = 0, j = n - 1;
    // 删除一个字符的机会
    int op = 1;
    while (i < j){
        if (op < 0) return 0;
        if (s[i] == s[j]) {
            i++;
            j--;
        } else {
            if (i + 1 <= j && s[i + 1] == s[j]) {
                i++;
                op--;
            } else if (i <= j - 1 && s[i] == s[j - 1]){
                j--;
                op--;
            }else{
                op -= 2;
            }
        }
    }
    return 1;

}

int main(){
    char s[N] = {0};
    scanf("%s", s);
    printf("%d\n", verify(s, strlen(s)));
    return 0;
}
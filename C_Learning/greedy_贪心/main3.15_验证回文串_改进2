/*
 *
3.15 验证回文串
给你一个字符串s，最多可以从中删除一个字符。请你判断s是否能成为回文字符串。
输入：s = "abca"
输出：1
输入：s = "abc"
输出：0

 */

#include <stdio.h>
#include <string.h>

#define N 50

int clarify2(char s[], int i, int j){
    while (i <= j){
        if (s[i] != s[j]) return 0;
        i++;
        j--;
    }
    return 1;
}

int clarify(char s[], int n){
    int i = 0, j = n - 1;
    while (i <= j){
        if (s[i] != s[j]) return clarify2(s, i + 1, j) || clarify2(s, i, j - 1);
        i++;
        j--;
    }
    return 1;
}


int main(){
    char s[N] = {0};
    int n = 0;
    scanf("%s", s);
    printf("%d\n", clarify(s, strlen(s)));
    return 0;
}
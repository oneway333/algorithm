#include <stdio.h>
#include <stdlib.h>
#include "math.h"

int count(int n){
    int a, b, c, res = 0;
    for (a = 0; a <= n ; a++) {
        for (b = 0; b <= n - a; b++) {
            res++;
        }
    }
    return res;
}

int main(){
    int n;
    scanf("%d", &n);
    printf("%d", count(n));
    return 0;
}

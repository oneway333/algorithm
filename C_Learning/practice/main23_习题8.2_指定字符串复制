#include <stdio.h>
#include <string.h>

#define N 50

void copy(char a[], char b[]){
    char *p = a + 11;
    char t[N] = {0};
    for (int i = 0; i < 13; ++i)
        t[i] = b[i + 4];
    strcpy(p, t);
}

int main(){
    char a[N] = "My name is Li jilin.";
    char b[N] = "Mr.Zhang Haoling is very happy.";
    copy(a, b);
    puts(a);
    return 0;
}
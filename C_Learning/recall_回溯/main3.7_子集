/*
 *
3.7 子集
给你一个整数数组nums，数组中的元素互不相同。输出该数组所有可能的子集（幂集）。解集不能包含重复的子集。你可以按任意顺序输出解集。
输入：nums = [0]
输出：[[], [0]]
输入：nums = [1,2,3]
输出：[[], [1], [2], [1,2], [3], [1,3], [2,3], [1,2,3]]
 */

#include <stdio.h>

#define N 500

int path[N];

void subColl(int nums[], int n, int k, int begin){
    if (k <= n){
        if (k == 0) printf("[]");
        for (int j = 0; j < k; ++j)
            printf("%d ", path[j]);
        putchar('\n');
    }
    for (int j = begin; j < n ; ++j) {
        path[k] = nums[j];
        subColl(nums, n, k + 1, j + 1);
    }
}

int main(){
    int nums1[] = {0}, n1 = 1;
    int nums2[] = {1, 2, 3}, n2 = 3;
    subColl(nums1, n1, 0, 0);
    putchar('\n');
    subColl(nums2, n2, 0, 0);
    return 0;
}
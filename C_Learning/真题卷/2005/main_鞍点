/*
 *
鞍点, 该位置上的元素在该行上最大，在该列上最小，也可能没有鞍点


 */

#include <stdio.h>

#define N 50

void find(){
    int a[N][N] = {{3, 2, 4, 5},
                   {6, 5, 9, 8},
                   {3, 6, 4, 6}};
    int m = 3, n = 4, i, j;
    for (i = 0; i < m; i++){
        int x = 0;
        for (j = 1; j < n; j++)
            if (a[i][j] > a[i][x]) x = j;
        for (j = 0; j < m; j++)
            if (a[j][x] < a[i][x]) break;
        if (j >= m) {
            printf("鞍点为a[%d][%d]: %d", i, x, a[i][x]);
            return;
        }
    }
    printf("没有鞍点");
}

int main(){
    find();
    return 0;
}
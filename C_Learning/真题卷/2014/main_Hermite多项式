/*
 *
  Hermite多项式
 */

#include <stdio.h>

double H(int n, double x){
    if (n == 0) return 1;
    if (n == 1) return 2 * x;
    return 2 * x * H(n - 1, x) - 2 * (n - 1) * H(n - 2, x);
}

int main(){
    int n;
    double x;
    scanf("%d %lf", &n, &x);
    printf("%lf\n", H(n, x));
    return 0;
}
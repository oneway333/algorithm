/*
 *
 *
 * (){}[]判断是否有效
 *
 *
 *
 *
 */

#include <stdio.h>
#include <string.h>

#define N 50

int main(){
    char s[N] = {0}, a[N] = {0};
    scanf("%s", s);
    int n = strlen(s), p = 0, i;
    for (i = 0; i < n; i++){
        a[p++] = s[i];
        if (p == 1) continue;
        if (a[p - 1] == ')' && a[p - 2] == '(') p -= 2;
        else if (a[p - 1] == ']' && a[p - 2] == '[') p -= 2;
        else if (a[p - 1] == '}' && a[p - 2] == '{') p -= 2;
    }
    if (p == 0) printf("%s is valid\n", s);
    else printf("%s is invalid\n", s);
    return 0;

}
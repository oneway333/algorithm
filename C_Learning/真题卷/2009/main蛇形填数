/*
 *
  蛇形走位
 */

#include <stdio.h>

#define N 50

int main(){
    int a[N][N] = {0}, n;
    scanf("%d", &n);
    // i行j列，pos -1表示左上，1表示右下
    int i = n - 1, j = 0, pos = -1;
    a[i][j] = 1;
    for (int k = 2; k <= n * n; k++){
        if (pos == -1){
            // 遇到左上边界有向上和向右
            if (j - 1 < 0 && i - 1 >= 0){
                a[--i][j] = k;
                pos = 1;
            }
            else if (j - 1 < 0 || i - 1 < 0){
                a[i][++j] = k;
                pos = 1;
            }
            // 如果没有碰到边界，就正常--i,--j
            else if (j - 1 >= 0 && i - 1 >= 0)
                a[--i][--j] = k;
            continue;
        }
        if (pos == 1){
            // 遇到右下边界有向右和向上
            if (i + 1 > n - 1 && j + 1 <= n - 1){
                a[i][++j] = k;
                pos = -1;
            }
            else if (i + 1 > n - 1 || j + 1 > n - 1 ){
                a[--i][j] = k;
                pos = -1;
            }
                // 如果没有碰到边界，就正常++i,++j
            else if (i + 1 <= n - 1 && j + 1 <= n - 1)
                a[++i][++j] = k;
            continue;
        }

    }
    for (i = 0; i < n; i++){
        for (j = 0; j < n; j++)
            printf("%4d", a[i][j]);
        putchar('\n');
    }
    return 0;

}
/*
 *
 *
 * 斐波那契数列，前20项写入fab.txt，和输出，第 n 项用递归
 *
 *
 */

#include <stdio.h>
#include <stdlib.h>

#define N 50

int f(int n){
    if (n == 1 || n == 2) return 1;
    return f(n - 1) + f(n - 2);
}

void saveAndPrint(){
    int n = 20, a[N] = {1, 1}, s = 2;
    for (int i = 2; i < n; i++){
        a[i] = a[i - 2] + a[i - 1];
        s += a[i];
    }
    printf("sum is %d\n", s);
    FILE *fp;
    if ((fp = fopen("fab.txt", "w")) == NULL){
        printf("file open failed\n");
        exit(0);
    }
    for (int i = 0; i < n; i++)
        fprintf(fp, "%-4d\n", a[i]);
    fclose(fp);
}

int main(){
    int n;
    scanf("%d", &n);
    printf("No.%d is %d\n", n, f(n));
    saveAndPrint();
    return 0;
}
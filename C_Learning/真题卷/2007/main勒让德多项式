/*
 *
勒让德多项式
 */

#include <stdio.h>

double p(int n, double x){
    if (n == 0) return 1.0;
    if (n == 1) return x;
    return ((2 * n - 1) * x * p(n - 1, x) - (n - 1) * p(n - 2, x)) / n;
}

int main(){
    int n;
    double x;
    scanf("%d %lf", &n, &x);
    printf("%lf", p(n, x));
    return 0;
}
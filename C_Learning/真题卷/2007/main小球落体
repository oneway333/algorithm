/*
 *
小球落体
 */

#include <stdio.h>
#include <math.h>

int main(){
    // h1为下落高度，h2为第二次下落高度
    double h1 = 100, h2 = h1 / 2, s = 0;
    int n = 10;
    for (int i = 0; i < n; i++){
        s += h1 + h2;
        h1 = h2;
        h2 = h2 / 2;
    }
    printf("经过 %lf m，第十次反弹 %lf m", s, h1);
    return 0;
}
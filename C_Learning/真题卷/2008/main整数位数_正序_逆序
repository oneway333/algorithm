/*
 *
整数位数，正序，逆序
 */

#include <stdio.h>

#define N 50

int main(){
    int n, c = 0, a[N] = {0};
    scanf("%d", &n);
    while (n){
        a[c++] = n % 10;
        n /= 10;
    }
    printf("%d位数\n", c);
    printf("正序输出： ");
    for (int i = c - 1; i >= 0; i--)
        printf("%d", a[i]);
    printf("\n逆序输出: ");
    for (int i = 0; i < c; i++)
        printf("%d", a[i]);
    return 0;
}
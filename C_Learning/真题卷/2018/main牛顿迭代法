/*
 *
 *
 * 牛顿迭代法
 *
 *
 *
 *
 */

#include <stdio.h>
#include <math.h>

double f(double x){
    return pow(x, 41) + pow(x, 3) + 1;
}

double df(double x){
    return 41 * pow(x, 40) + 3 * pow(x, 2);
}

int main(){
    double x = -1, s = 1;
    while (fabs(s) > 1e-6){
        double t = x;
        x = x - f(x) / df(x);
        s = x - t;
    }
    printf("%lf\n", x);
    return 0;
}